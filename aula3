6-
 #include <stdio.h>
#include <stdlib.h>

int main (void)
{
	char name [30];
	int i = 0;
	int a = 0;
	scanf ("%[^\n]s", name);
	for (i = 0; name[i] != '\0';i++)
    	{

        	if (name[i] == ' ')
           	 a++;    
    	}	
	printf ("%d \n", a +1);
}
